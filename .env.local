# Local Development Environment Configuration
NODE_ENV=development

# Network Configuration
NUXT_HOST=0.0.0.0
NUXT_PORT=3000
HOST=0.0.0.0
PORT=3000

# Public Site Configuration
NUXT_PUBLIC_SITE_URL=http://localhost:3000
NUXT_PUBLIC_API_BASE=/api

# Security Configuration (Development - not secure for production)
NUXT_SECRET_KEY=dev-secret-key-for-local-development-only
NUXT_SESSION_PASSWORD=dev-session-password-32-chars-min

# Development Nuxt Settings
NUXT_SSR=true
NUXT_TELEMETRY_DISABLED=true
NUXT_DEVTOOLS_ENABLED=true

# Database Configuration (Development)
# DATABASE_URL=postgresql://user:password@localhost:5432/eventhub_dev

# Cache Configuration (Local Redis or Memory)
# NITRO_STORAGE_REDIS=redis://localhost:6379/0

# External Services (Development)
# API_BASE_URL=http://localhost:3001
# REDIS_URL=redis://localhost:6379

# Monitoring and Logging (Verbose for development)
LOG_LEVEL=debug
NUXT_LOG_LEVEL=info
ENABLE_METRICS=false

# Domain Configuration
DOMAIN=localhost

# Performance Settings (Development optimized)
NITRO_PRESET=node-server
NITRO_MINIFY=false
NITRO_EXPERIMENTAL_WASM=false

# Development Build Optimization
NITRO_COMPRESS=false
NITRO_STATIC=false

# Health Check Configuration
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=10000

# Development Security Headers (Relaxed)
NUXT_SECURITY_HEADERS=false
NUXT_CSP_ENABLED=false

# Static Asset Configuration
NUXT_PUBLIC_CDN_URL=
STATIC_CACHE_MAX_AGE=0

# Error Handling (Detailed for development)
NUXT_ERROR_HANDLER=true
SENTRY_DSN=

# Session Configuration (Relaxed for development)
SESSION_MAX_AGE=86400
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# Development Features
NUXT_DEBUG=true
NUXT_SOURCEMAP=true
VITE_INSPECT=false
